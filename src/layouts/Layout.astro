---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import LanguageSwitcher from "../components/LanguageSwitcher.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  lang: "en" | "es" | "it" | "gr";
}

const { title, description, lang } = Astro.props;
const currentPath = Astro.url.pathname;

// Language-specific meta tags
const langNames = {
  en: "English",
  es: "Español",
  it: "Italiano",
  gr: "Ελληνικά",
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <title>{title} | RomaNET</title>

    {description && <meta name="description" content={description} />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | RomaNET`} />
    {description && <meta property="og:description" content={description} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={`${title} | RomaNET`} />
    {
      description && (
        <meta property="twitter:description" content={description} />
      )
    }

    <!-- Language alternates -->
    <link
      rel="alternate"
      hreflang="en"
      href={currentPath.replace(/\/(en|es|it|gr)/, "/en")}
    />
    <link
      rel="alternate"
      hreflang="es"
      href={currentPath.replace(/\/(en|es|it|gr)/, "/es")}
    />
    <link
      rel="alternate"
      hreflang="it"
      href={currentPath.replace(/\/(en|es|it|gr)/, "/it")}
    />
    <link
      rel="alternate"
      hreflang="gr"
      href={currentPath.replace(/\/(en|es|it|gr)/, "/gr")}
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Netlify Identity Widget -->
    <script
      is:inline
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body>
    <Header lang={lang}>
      <LanguageSwitcher
        slot="language-switcher"
        currentLang={lang}
        currentPath={currentPath}
      />
    </Header>

    <main>
      <slot />
    </main>

    <Footer lang={lang} />

    <!-- Netlify Identity redirect and invite handling -->
    <script is:inline>
      // Wait for the Netlify Identity widget to load
      function initNetlifyIdentity() {
        const hash = window.location.hash;

        // Check if we have any identity tokens in the URL
        const hasInviteToken = hash.includes("invite_token=");
        const hasConfirmationToken = hash.includes("confirmation_token=");
        const hasRecoveryToken = hash.includes("recovery_token=");
        const hasAccessToken = hash.includes("access_token=");

        if (
          hasInviteToken ||
          hasConfirmationToken ||
          hasRecoveryToken ||
          hasAccessToken
        ) {
          // If we have a token, open the identity widget immediately
          if (window.netlifyIdentity) {
            window.netlifyIdentity.open();
          }
        }

        if (window.netlifyIdentity) {
          window.netlifyIdentity.on("init", (user) => {
            if (!user) {
              window.netlifyIdentity.on("login", () => {
                document.location.href = "/admin/";
              });
            }
          });
        }
      }

      // Check if netlifyIdentity is already loaded
      if (window.netlifyIdentity) {
        initNetlifyIdentity();
      } else {
        // Wait for the script to load
        window.addEventListener("load", function () {
          if (window.netlifyIdentity) {
            initNetlifyIdentity();
          }
        });
      }
    </script>
  </body>
</html>
